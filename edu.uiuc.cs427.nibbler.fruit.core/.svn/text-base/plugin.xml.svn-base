<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <!-- Fortran Application Launch Shortcut (Run As > Local Fortran Application) --> 

   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="edu.uiuc.cs427.nibbler.fruit.core.RunFRUITTest"
               icon="icons/pastie_enabled.gif"
               label="Run FRUIT Test"
               style="push">
            <visibleWhen
                  checkEnabled="false">
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="edu.uiuc.cs427.nibbler.fruit.core.RunFRUITTestHandler"
            description="Run Fruit Test"
            id="edu.uiuc.cs427.nibbler.fruit.core.RunFRUITTest"
            name="Run FRUIT Test">
      </command>
   </extension>
   <extension
         id="fruitTestFailureMarker"
         name="Fruit Test Failure Marker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <super
            type="org.eclipse.core.resources.textmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>

</plugin>
